<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="ConnectDialog" parent="GtkDialog">
        <property name="title" translatable="yes">_New Connection</property>
        <property name="default-width">800</property>
        <property name="default-height">600</property>
        <property name="destroy-with-parent">True</property>
        <child internal-child="content_area">
            <object class="GtkBox">
                <property name="vexpand">1</property>
                <property name="hexpand">1</property>
                <child>
                    <object class="GtkStack" id="stack">
                        <child>
                            <object class="GtkStackPage">
                                <property name="name">page0</property>
                                <property name="child">
                                    <object class="GtkFlowBox" id="flowBox">
                                        <property name="halign">1</property>
                                        <property name="valign">1</property>
                                        <property name="orientation">vertical</property>
                                        <signal name="child_activated" handler="flowBoxChildActive"/>
                                    </object>
                                </property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkStackPage">
                                <property name="visible">1</property>
                                <property name="name">page1</property>
                                <property name="child">
                                    <object class="GtkBox">
                                        <property name="orientation">vertical</property>
                                        <child>
                                            <object class="GtkBox">
                                                <property name="orientation">vertical</property>
                                                <child>
                                                    <object class="GtkGrid">
                                                        <property name="row_spacing">5</property>
                                                        <property name="column_spacing">5</property>
                                                        <property name="hexpand">1</property>
                                                        <child>
                                                            <object class="GtkLabel">
                                                                <property translatable="yes" name="label">Name</property>
                                                                <layout>
                                                                    <property name="row">0</property>
                                                                    <property name="column">0</property>
                                                                    <property name="column-span">1</property>
                                                                </layout>
                                                            </object>
                                                        </child>
                                                        <child>
                                                            <object class="GtkEntry" id="name">
                                                                <property name="hexpand">True</property>
                                                                <layout>
                                                                    <property name="row">0</property>
                                                                    <property name="column">1</property>
                                                                    <property name="column-span">6</property>
                                                                </layout>
                                                            </object>
                                                        </child>
                                                        <child>
                                                            <object class="GtkLabel">
                                                                <property translatable="yes" name="label">Comment</property>
                                                                <layout>
                                                                    <property name="row">1</property>
                                                                    <property name="column">0</property>
                                                                    <property name="column-span">1</property>
                                                                </layout>
                                                            </object>
                                                        </child>
                                                        <child>
                                                            <object class="GtkEntry" id="comment">
                                                                <property name="hexpand">1</property>
                                                                <layout>
                                                                    <property name="row">1</property>
                                                                    <property name="column">1</property>
                                                                    <property name="column-span">6</property>
                                                                </layout>
                                                            </object>
                                                        </child>
                                                    </object>
                                                </child>
                                                <child>
                                                    <object class="GtkNotebook">
                                                        <child>
                                                            <object class="GtkGrid">
                                                                <property name="row_spacing">5</property>
                                                                <property name="column_spacing">5</property>
                                                                <property name="vexpand">1</property>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="label" translatable="yes">Host</property>
                                                                        <layout>
                                                                            <property name="row">0</property>
                                                                            <property name="column">0</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="host">
                                                                        <property name="hexpand">1</property>
                                                                        <layout>
                                                                            <property name="row">0</property>
                                                                            <property name="column">1</property>
                                                                            <property name="column-span">6</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="label" translatable="yes">Port</property>
                                                                        <layout>
                                                                            <property name="row">0</property>
                                                                            <property name="column">7</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="port">
                                                                        <property name="hexpand">1</property>
                                                                        <layout>
                                                                            <property name="row">0</property>
                                                                            <property name="column">8</property>
                                                                            <property name="column-span">2</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="label" translatable="yes">Authorization</property>
                                                                        <layout>
                                                                            <property name="row">1</property>
                                                                            <property name="column">0</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkComboBoxText" id="authBox">
                                                                        <signal name="changed" handler="authChange"/>
                                                                        <items>
                                                                            <item translatable="yes">User &amp; Password</item>
                                                                            <item translatable="yes">Windows credentials </item>
                                                                            <item translatable="yes">None</item>
                                                                        </items>
                                                                        <layout>
                                                                            <property name="row">1</property>
                                                                            <property name="column">1</property>
                                                                            <property name="column-span">6</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="label" translatable="yes">User</property>
                                                                        <layout>
                                                                            <property name="row">2</property>
                                                                            <property name="column">0</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="user">
                                                                        <layout>
                                                                            <property name="row">2</property>
                                                                            <property name="column">1</property>
                                                                            <property name="column-span">6</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="label" translatable="yes">Password</property>
                                                                        <layout>
                                                                            <property name="row">3</property>
                                                                            <property name="column">0</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkPasswordEntry" id="password">
                                                                        <layout>
                                                                            <property name="row">3</property>
                                                                            <property name="column">1</property>
                                                                            <property name="column-span">6</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="label" translatable="yes">Save</property>
                                                                        <layout>
                                                                            <property name="row">3</property>
                                                                            <property name="column">7</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkComboBoxText" id="saveBox">
                                                                        <property name="hexpand">1</property>
                                                                        <items>
                                                                            <item translatable="yes">Forever</item>
                                                                            <item translatable="yes">Never</item>
                                                                        </items>
                                                                        <layout>
                                                                            <property name="row">3</property>
                                                                            <property name="column">8</property>
                                                                            <property name="column-span">2</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkLabel">
                                                                        <property name="label" translatable="yes">Database</property>
                                                                        <layout>
                                                                            <property name="row">4</property>
                                                                            <property name="column">0</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                                <child>
                                                                    <object class="GtkEntry" id="database">
                                                                        <layout>
                                                                            <property name="row">4</property>
                                                                            <property name="column">1</property>
                                                                            <property name="column-span">6</property>
                                                                        </layout>
                                                                    </object>
                                                                </child>
                                                            </object>
                                                        </child>
                                                        <child type="tab">
                                                            <object class="GtkLabel">
                                                                <property name="label" translatable="yes">_General</property>
                                                            </object>
                                                        </child>
                                                    </object>
                                                </child>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkBox">
                                                <property name="spacing">10</property>
                                                <child>
                                                    <object class="GtkButton">
                                                        <property name="label" translatable="yes">_Test Connection</property>
                                                        <signal name="clicked" handler="testConnect"/>
                                                    </object>
                                                </child>
                                                <child>
                                                    <object class="GtkSpinner" id="spinner">

                                                    </object>
                                                </child>
                                                <child>
                                                    <object class="GtkLabel" id="tText"></object>
                                                </child>
                                                <style>
                                                    <class name="test-box"/>
                                                </style>
                                            </object>
                                        </child>
                                    </object>
                                </property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
        <child type="action">
            <object class="GtkButton" id="stepBtn">
                <property translatable="yes" name="label">_Back</property>
                <property name="width-request">100</property>
                <property name="visible">0</property>
                <signal name="clicked" handler="back"/>
                <style>
                    <class name="action-item"/>
                </style>
            </object>
        </child>
        <child type="action">
            <object class="GtkButton" id="apply">
                <property translatable="yes" name="label">_Next</property>
                <property name="width-request">100</property>
                <signal name="clicked" handler="nextOrSave"/>
                <style>
                    <class name="action-item"/>
                </style>
            </object>
        </child>
        <child type="action">
            <object class="GtkButton" id="cancel">
                <style>
                    <class name="action-item"/>
                </style>
                <signal handler="dialogClose" name="clicked"/>
                <property name="width-request">100</property>
                <property translatable="yes" name="label">Cancel</property>
            </object>
        </child>

        <action-widgets>
            <action-widget response="cancel" default="true">cancel</action-widget>
            <action-widget response="ok">apply</action-widget>
            <action-widget response="ok">stepBtn</action-widget>
        </action-widgets>
        <style>
            <class name="connect-dialog"/>
        </style>
    </template>
</interface>
