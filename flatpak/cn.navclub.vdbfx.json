{
    "app-id": "cn.navclub.dbfx",
    "runtime": "org.gnome.Sdk",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "v-dbfx",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=home"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libgee",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libgee.git"
                }
            ]
        },
        {
            "name": "sqlite",
            "buildsystem": "simple",
            "build-commands": [
                "./configure --prefix=/app",
                "make",
                "make install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.sqlite.org/snapshot/sqlite-snapshot-202205171511.tar.gz",
                    "sha1": "90d18bd735f96111df61c4dc78c1f011ac95ad1b"
                }
            ]
        },
        {
            "name": "flatpak_mysql",
            "no-autogen": true,
            "buildsystem": "cmake",
            "cleanup": [
                "lib",
                "include"
            ],
            "sources": [
                {
                    "type": "git",
                    "branch": "main",
                    "url": "https://github.com/GZYangKui/flatpak-mysql.git"
                }
            ]
        },
        {
            "name": "dbfx",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "branch": "master",
                    "url": "https://github.com/databasefx/v-dbfx.git"
                }
            ]
        }
    ],
    "build-options": {
        "env": {}
    }
}